###########################################################
###################### General Setup ######################
###########################################################

### Paths #################################################

# 定义应用代码在宿主机路径
APP_CODE_PATH_HOST=../newphp
API_CODE_PATH_HOST=../api
MEMBER_CODE_PATH_HOST=../member
PORTAL_CODE_PATH_HOST=../portal
CONSULT_CODE_PATH_HOST=../consult

# 定义应用代码在容器中的路径(不建议更改)
APP_CODE_PATH_CONTAINER=/var/www/parallel
API_CODE_PATH_CONTAINER=/usr/src/api
MEMBER_CODE_PATH_CONTAINER=/usr/src/member
PORTAL_CODE_PATH_CONTAINER=/usr/src/portal
CONSULT_CODE_PATH_CONTAINER=/usr/src/consult

# Choose storage path on your machine. For all storage systems
DATA_PATH_HOST=./data

### Drivers ################################################

# All volumes driver
VOLUMES_DRIVER=local

# All Networks driver
NETWORKS_DRIVER=bridge

### Docker compose files ##################################

# Select which docker-compose files to include. If using docker-sync append `:docker-compose.sync.yml` at the end
COMPOSE_FILE=docker-compose.yml

# 在Windows下将冒号改成分号
COMPOSE_PATH_SEPARATOR=:

### Docker Host IP ########################################

# Enter your Docker Host IP (will be appended to /etc/hosts). Default is `10.0.75.1`
DOCKER_HOST_IP=10.0.75.1

### Remote Interpreter ####################################

# Choose a Remote Interpreter entry matching name. Default is `laradock`
PHP_IDE_CONFIG=serverName=parallel

### Windows Path ##########################################

# A fix for Windows users, to ensure the application path works
COMPOSE_CONVERT_WINDOWS_PATHS=1

### Docker Sync ###########################################

# If you are using Docker Sync. For `osx` use 'native_osx', for `windows` use 'unison', for `linux` docker-sync is not required
DOCKER_SYNC_STRATEGY=native_osx

###########################################################
################ Containers Customization #################
###########################################################

## NEWPHP #################################################

SSH_PORT=2222
FPM_PORT=9000

## NGINX #################################################

NGINX_HOST_HTTP_PORT=80
NGINX_HOST_LOG_PATH=./logs/nginx/
NGINX_SITES_PATH=./nginx/sites/
NGINX_PHP_UPSTREAM_CONTAINER=newphp
NGINX_PHP_UPSTREAM_PORT=9000

## MYSQL #################################################

MYSQL_VERSION=latest
MYSQL_DATABASE=parallel
MYSQL_USER=root
MYSQL_PASSWORD=yfyunmysql
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=yfyunmysql
MYSQL_ENTRYPOINT_INITDB=./mysql/docker-entrypoint-initdb.d

### REDIS #################################################

REDIS_PORT=6379

### MONGODB ###############################################

MONGODB_PORT=27017

## ELASTICSEARCH #########################################

ELASTICSEARCH_HOST_HTTP_PORT=9200
ELASTICSEARCH_HOST_TRANSPORT_PORT=9300

# API #########################################
API_PORT=8085

# MEMBER #########################################
MEMBER_PORT=1337

# PORTAL #########################################
PORTAL_PORT=1338

# CONSULT #########################################
CONSULT_PORT=8088
